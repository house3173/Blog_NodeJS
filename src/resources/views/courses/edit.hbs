<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}/update?method=PUT">
        <div class="form-group">
            <label for="name">Name course:</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name" id="name"  placeholder="Enter description">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" name="description" id="description"  placeholder="Enter description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId" id="videoId"  placeholder="Enter description">
        </div>
        
        <button type="submit" class="btn btn-primary">Save course</button>
        
        {{!-- <input type="text" name="name" id="name"  placeholder="Enter description">
        <button type="submit">Submit</button> --}}
    </form>
</div>